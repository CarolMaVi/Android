<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNumero"
        android:text="0"
        android:textSize="200sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btIncrementar"/>

    <Button
        android:id="@+id/btIncrementar"
        android:onClick="onClickIncrementar"
        android:text="@string/incrementar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btDecrementar"/>

    <Button
        android:id="@+id/btDecrementar"
        android:onClick="onClickDecrementar"
        android:text="@string/decrementar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>