<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@id/btReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llBotones"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btA単adir"
        android:onClick="onClickA単adir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/a単adir"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btBorrarTodo"
        android:onClick="onClickBorrarTodo"
        android:text="@string/borrartodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btA単adir"/>

    <Button
        android:id="@+id/btReset"
        android:onClick="onClickReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_above="@id/btBorrarTodo"/>
</RelativeLayout>