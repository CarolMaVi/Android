<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_above="@+id/btAnadirIzq"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llIzquierda"
                android:clickable="true"
                android:onClick="onClickEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btAnadirIzq"
            android:layout_above="@+id/btEliminarIzq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anadir"
            android:onClick="onClickAnadir"/>

        <Button
            android:id="@+id/btEliminarIzq"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar"
            android:onClick="onClickEliminar"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_above="@+id/btAnadirDer"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llDerecha"
                android:clickable="true"
                android:onClick="onClickEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btAnadirDer"
            android:layout_above="@+id/btEliminarDer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anadir"
            android:onClick="onClickAnadir"/>

        <Button
            android:id="@+id/btEliminarDer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar"
            android:onClick="onClickEliminar"/>

    </RelativeLayout>

</LinearLayout>